<body class="login">
<!--page container-->
<div class="container grayed-page">
    <!--SA icon-->
    <div class="row">
        <!--div containing logo and App name-->
        <div class="row justify-content-center">
            <img src="/public/assets/images/salvation-army-logo-hd-5156.png" alt="" class="logo m-4">
            <h1 class="text-center m-5 mt-3">Salvation Army Resident Services Tracker</h1>
        </div>
    </div>

    <!--container for login form and links-->
    <div class="col my-auto p-4 border container w-50 form">
        <div class="container justify-content-center">
            <form class="form-horizontal" action="/login" method="post">
                <fieldset>
                    <!-- Form Name -->
                    <legend class="mt-0 mb-4">Login</legend>

                    <!-- Text input-->
                    <div class="form-group mt-3">
                        <label class="control-label" for="emailInput">Email Address</label>
                        <input id="emailInput" name="email" type="email" placeholder="email@domain.com" class="form-control" required="">
                    </div>

                    <!-- Text input-->
                    <div class="form-group mt-3">
                        <label class="control-label" for="passwordInput">Password</label>
                        <input id="passwordInput" name="password" type="password" placeholder="password" class="form-control input-md" required="">
                    </div>

                    <!-- Button -->
                    <button type="submit" id="loginBtn" name="loginBtn" class="btn btn-primary mt-4 mb-4">Login</button>
                </fieldset>
            </form>
            <div class="row">
                <div class="col-4"><a href="#">Forgot Password?</a></div>
                <div class="col-4"><a href="/signup">Need an Account?</a></div>
            </div>
        </div>
    </div>
    <!--container for footer links-->
    <div class="container">
        <hr>
        <footer class="footer mt-1 m-6 pt-2">
            <!-- Links -->
            <div class="row justify-content-center p-4">
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/about/" class="text-decoration-none"><p class="text-center">About Salvation Army</p></a></div>
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/employment-opportunities/" class="text-decoration-none"><p class="text-center">Employment Opportunities</p></a></div>
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/contact/" class="text-decoration-none"><p class="text-center">Contact us</p></a></div>
            </div>
            <!-- socials --> <!--TODO align icons center in cols-->
            <div class="row justify-content-center">
                <div class="col-2 align-item-center"><a href="#"><img src="/public/assets/images/facebookIcon.png" alt=""></a></div>
                <div class="col-2"><a href="#"><img src="/public/assets/images/linkedinIcon.png" alt=""></a></div>
                <div class="col-2"><a href="#"><img src="/public/assets/images/instagramIcon.png" alt=""></a></div>
                <div class="col-2"><a href="#"><img src="/public/assets/images/twitterIcon.png" alt=""></a></div>
            </div>
