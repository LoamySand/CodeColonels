<div class="container grayed-page">

    <div class="row justify-content-center mb-4">
        <h1>Record Events</h1>
    </div>
    <div class="col my-auto p-4 border container w-50 form">
        <div class="container">
            <form class="form-horizontal" action="/root/record-events" method="post" id="recordEventForm">
                <!-- Form Name -->
                <div class="form-row ">
                    <!-- ID input-->
                    <label class="form-label " for="residentID">
                        <h6 class="check-label-h6">ResidentID:</h6>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text" id="">SAResidentID</span>
                        <input class="form-control" id="residentID" name="residentID" type="text" placeholder="000000000" >
                    </div>
                </div>
                <!-- Date Input -->
                <div class="form-row mt-4">
                    <label class="form-label col-12" for="eventDate">
                        <h6 class="check-label-h6">Date:</h6>
                    </label>
                    <input type="datetime-local" class="form-control" id="eventDate" name="eventDate">
                </div>
                <!-- Discipline type -->
                <div class="row">
                    <div class="form-group mt-4 ml-0">
                <label class="form-label col-12" for="discipline">
                    <h6 class="check-label-h6">Type:</h6>
                </label>
                    </div>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="discipline" id="Warning" value="Warning">
                    <label class="form-check-label" for="Warning">
                        Warning
                    </label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="discipline" id="Education" value="Education">
                    <label class="form-check-label" for="Education">
                        Education
                    </label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="LastChanceContract" id="LastChance" value="Last Chance Contract">
                    <label class="form-check-label" for="requestedRoot">
                        Last Chance Contract
                    </label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="StepAway" id="StepAway" value="Step Away">
                    <label class="form-check-label" for="requestedRoot">
                        Step Away
                    </label>
                </div>
                <!-- Notes Input -->
                <div class="form-row mt-4">
                    <label class="form-label col-12" for="eventNotes">
                        <h6 class="check-label-h6">Notes:</h6>
                    </label>
                    <textarea class="form-control" id="eventNotes" name="eventNotes" cols="30" rows="5"></textarea>
                </div>
                <div class="form-row p-1 ">
                    <!--                        //TODO add info button to popover tip for finding residentID-->
                    <!-- Button -->
                    <div class="col">
                        <button type="submit" id="check_in_submit" name="action" value="checkIn" class="btn btn-primary mt-4 mb-4" >Record Discipline</button>
                    </div>
                </div>
            </form>
        </div>
