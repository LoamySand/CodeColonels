<!--page container-->
<div class="container grayed-page pt-5">
    <!--container for login form and links-->
    <div class="col my-auto p-4 border container w-50 form">
        <div class="container justify-content-center">
            <form class="form-horizontal" action="/root/add-resident-profile" method="post">
                <fieldset>
                    <!-- Form Name -->
                    <legend class="mt-0 mb-4">Create Resident Profile</legend>
                    <!-- Name input -->
                    <div class="row form-group mt-3">
                        <div class="col">
                            <input type="text" name="firstName" class="form-control" placeholder="First name" aria-label="First name">
                        </div>
                        <div class="col">
                            <input type="text" name="lastName" class="form-control" placeholder="Last name" aria-label="Last name">
                        </div>
                    </div>


                    <!-- Sex and Gender-->
                    <div class="row">
                        <!-- Sex -->
                        <div class="form-group mt-3 mb-3">
                            <label class="form-check-label " for="sex">
                                <h6 class="check-label-h6">Sex:</h6>
                            </label>
                            <div class="form-check-inline mt-3">
                                <input class="form-check-input" type="radio" name="sex" id="male" value="Male">
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input class="form-check-input" type="radio" name="sex" id="female" value="Female">
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input class="form-check-input" type="radio" name="sex" id="intersex" value="Intersex">
                                <label class="form-check-label" for="intersex">
                                    Intersex
                                </label>
                            </div>
                        </div>
                        <!-- Gender -->
                            <label class="form-check-label" for="gender">
                                <h6 class="check-label-h6 mt-3 mb-0 col-12">Gender:</h6>
                            </label>
                            <div class="form-group col-12">
                                <div class="form-check-inline mt-3">
                                    <input class="form-check-input" type="radio" name="gender" id="man" value="Man">
                                    <label class="form-check-label" for="man">
                                        <p class="gender-p">Man</p>
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="woman" value="Woman">
                                    <label class="form-check-label" for="woman">
                                        <p class="gender-p">Woman</p>
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="transgender" value="Transgender">
                                    <label class="form-check-label" for="transgender">
                                        <p class="gender-p">Transgender</p>
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="non-binary" value="Non-binary">
                                    <label class="form-check-label" for="non-binary">
                                        <p class="gender-p">Non-binary</p>
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="gender-fluid" value="Gender fluid">
                                    <label class="form-check-label" for="gender-fluid">
                                        <p class="gender-p">Gender Fluid</p>
                                    </label>
                                </div>
                            </div>
                        </div>

                    <!-- Pronoun -->
                    <div class="row">
                        <div class="form-group mt-3">
                            <label class="form-check-label " for="pronoun">
                                <h6 class="check-label-h6">Pronouns:</h6>
                            </label>
                            <div class="form-check-inline mt-3">
                                <input class="form-check-input" type="radio" name="pronoun" id="he" value="He/Him/His">
                                <label class="form-check-label" for="he">
                                    <p class="gender-p">He/Him/His</p>
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input class="form-check-input" type="radio" name="pronoun" id="she" value="She/Her/Hers">
                                <label class="form-check-label" for="she">
                                    <p class="gender-p">She/Her/Hers</p>
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <input class="form-check-input" type="radio" name="pronoun" id="they" value="They/Them/Theirs">
                                <label class="form-check-label" for="they">
                                    <p class="gender-p">They/Them/Theirs</p>
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- DOB -->
                    <div class="row  mt-3 mb-3">
                        <div class="col-3">
                        <label class="form-check-label mb-1 mt-1" for="dob">
                            <h6 class="check-label-h6">Date of Birth:</h6>
                        </label>
                        </div>
                        <div class="col-6">
                            <input type="date" id="dob" name="dob" class="form-control" aria-label="date-of-birt">
                        </div>
                    </div>
                    <!-- Features -->
                    <!--TODO FIGURE OUT CHIP INPUT SCRIPT FOR ADDING AND REMOVING INPUTS FROM ARRAY-->
                    <div class="form-group mt-3">
                        <label class="form-check-label mb-1 mt-1" for="features">
                            <h6 class="check-label-h6">Features:</h6>
                        </label>
                        <input class="tagInput" type="text" value="" data-role="tagsinput" id="features" name="features">
                    </div>
                    <!-- Button -->
                    <div class="mx-auto mt-5 mb-4 mx-auto w-25">
                    <button type="submit" id="createBtn" name="createBtn" class="btn btn-primary ">Add Resident</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <!--container for footer links-->
    <div class="container">
        <hr>
        <footer class="footer mt-1 m-6 pt-2">
            <!-- Links -->
            <div class="row justify-content-center p-4">
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/about/" class="text-decoration-none"><p class="text-center">About Salvation Army</p></a></div>
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/employment-opportunities/" class="text-decoration-none"><p class="text-center">Employment Opportunities</p></a></div>
                <div class="col-3"><a href="https://www.salvationarmyusa.org/usn/contact/" class="text-decoration-none"><p class="text-center">Contact us</p></a></div>
            </div>
            <!-- socials --> <!--TODO align icons center in cols-->
